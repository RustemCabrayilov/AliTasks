@model MenuCategory
<div class="container-fluid mt-3">
    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
       
        <div class="form-group mb-3">
            <label asp-for="@Model.Icon" class="form-label">Icon</label>

            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="@Model.Icon" value="fa-egg">
                <label class="form-check-label" for="exampleRadios1">
                    <i class="fa fa-2x fa-egg text-primary"></i>
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="@Model.Icon" value="fa-hamburger">
                <label class="form-check-label" for="exampleRadios2">
                    <i class="fa fa-2x fa-hamburger text-primary"></i>
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="@Model.Icon" value="fa-utensils">
                <label class="form-check-label" for="exampleRadios1">
                    <i class="fa fa-2x fa-utensils text-primary"></i>
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="@Model.Icon" value="fa-wine-glass">
                <label class="form-check-label" for="exampleRadios1">
                    <i class="fa fa-2x fa-wine-glass text-primary"></i>
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="@Model.Icon" value="fa-fish">
                <label class="form-check-label" for="exampleRadios1">
                    <i class="fa fa-2x fa-fish text-primary"></i>
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="@Model.Icon" value="fa-cheese">
                <label class="form-check-label" for="exampleRadios1">
                    <i class="fa fa-2x fa-cheese text-primary"></i>
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Add Service</button>
    </form>
</div>