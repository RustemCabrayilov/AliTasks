@model List<Service>

<div class="container-fluid">
    <table class="table" style="text-align:center">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Icon</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        @{
                            var text = item.Description.Length > 70 ? item.Description.Substring(0, 70) : item.Description;
                        }@text...
                    </td>
                    <td><i class="fa fa-1x @item.Icon text-secondary"></i></td>
                    <td>
                        <a asp-action="update" asp-controller="service" asp-route-id ="@item.Id">
                            <i style="color:orange;font-size:18px;" class="fas fa-wrench"></i>
                        </a>
                    </td>
                    <td>
                        <a onclick="if(!confirm('Are you Sure?')){return false;}" asp-action="delete" asp-controller="service" asp-route-id="@item.Id">
                            <i style="color:red;font-size:18px;" class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Add" asp-controller="Service" class="btn btn-primary w-100">Add Service</a>
</div>
