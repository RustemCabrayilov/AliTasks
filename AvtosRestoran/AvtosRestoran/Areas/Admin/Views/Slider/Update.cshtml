@model Slider
<div class="container-fluid mt-3">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="@Model.Title" class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="@Model.Title">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="@Model.Description">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Image" class="form-label">Image</label>
            <input type="file" class="form-control" accept="image/*" asp-for="@Model.Image">
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" asp-for="@Model.IsActive">
            <label class="form-check-label" asp-for="@Model.IsActive">Active?</label>
        </div>
        <div>
            <img  src="~/Images/Sliders/@Model.ImageUrl" width="200" height="200" class="mb-3" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Update Slider</button>
    </form>
</div>