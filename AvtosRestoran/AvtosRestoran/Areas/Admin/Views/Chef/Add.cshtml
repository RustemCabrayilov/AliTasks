@model Chef
<div class="container-fluid mt-3">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Surname" class="form-label">Surname</label>
            <input type="text" class="form-control" asp-for="@Model.Surname">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Position" class="form-label">Position</label>
            <input type="text" class="form-control" asp-for="@Model.Position">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Image" class="form-label">Image</label>
            <input type="file" class="form-control" accept="image/*" asp-for="@Model.Image">
        </div>
        <button type="submit" class="btn btn-primary w-100">Add Service</button>
    </form>
</div>