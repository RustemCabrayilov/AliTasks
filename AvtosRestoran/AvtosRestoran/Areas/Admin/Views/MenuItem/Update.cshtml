@model MenuItem
<div class="container-fluid mt-3">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="@Model.Title" class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="@Model.Title">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="@Model.Description">
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Price" class="form-label">Price</label>
            <input type="text" class="form-control" asp-for="@Model.Price">
        </div>

        <div class="form-group mb-3">
            <label asp-for="@Model.MenuCategoryId" class="form-label">Category</label>
            <select class="form-select" asp-for="@Model.MenuCategoryId" aria-label="Default select example">
                <option selected disabled>Select one of them</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="@Model.Image" class="form-label">Image</label>
            <input type="file" class="form-control" accept="image/*" asp-for="@Model.Image">
        </div>
        <div>
            <img src="~/Images/MenuItems/@Model.ImageUrl" width="200" height="200" class="mb-3" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Update Item</button>
    </form>
</div>